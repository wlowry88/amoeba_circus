<div class="container">
<h1>Listing Acts</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date and time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @acts.each do |act| %>
      <tr>
        <td><%= act.name %></td>
        <td><%= act.date_and_time %></td>
        <td><%= link_to 'Show', act %></td>
        <td><%= link_to 'Edit', edit_act_path(act) %></td>
        <td><%= link_to 'Destroy', act, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2><%= link_to 'New Act', new_act_path %></h2><br>
<%= link_to 'Back', :back %>

</div>