<div class="container">
<h1 class="text-center">Listing Amoebas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Generation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amoebas.each do |amoeba| %>
      <tr>
        <td><%= amoeba.name %></td>
        <td><%= amoeba.generation %></td>
        <td><%= link_to 'Show', amoeba %></td>
        <td><%= link_to 'Edit', edit_amoeba_path(amoeba) %></td>
        <td><%= link_to 'Destroy', amoeba, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2><%= link_to 'Make an Amoeba!!', new_amoeba_path %></h2>
<%= link_to 'Back', :back %>
</div>
