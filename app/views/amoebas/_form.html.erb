  <div class="field">
    <%= f.label :act_id %><br>
    <%= f.select :act_id, options_for_select(@acts.map{|s|[s.name, s.id]}, selected: @amoeba.act_id) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
